<?xml version="1.0" encoding="utf-8"?>
<!-- 登录界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical"
    android:background="#FFFFFF" >
    
<!-- 头部导航 -->
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/v5_0_1_flipper_head_blue_background"
        android:orientation="horizontal" >
          <ImageButton
            android:id="@+id/ib_return"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/v5_0_1_flipper_head_title_wrapper_background"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/v5_0_1_flipper_head_back" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="24dip"
            android:layout_gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_separator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="找回密码"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        
    </LinearLayout>
    
    <!-- 注册界面 -->
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"       
        android:orientation="vertical"
        android:background="#FFFFFF" >
        
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#FFFFFF">
            
            <!-- 根据注册进度改变字体颜色 -->
            <TextView android:id="@+id/tv_register_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 输入手机号码"
                android:textColor="@color/black1"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right_gray"
                android:layout_marginLeft="5dip"/>
            <TextView android:id="@+id/tv_register_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 输入验证码"
                android:textColor="@color/black1"/>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right_gray"
                android:layout_marginLeft="5dip"/>
            <TextView android:id="@+id/tv_register_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 重置密码"
                android:textColor="@color/action_bar_disable"/>
        </LinearLayout>
	   
         <LinearLayout android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        
        android:orientation="vertical"
        android:gravity="center_horizontal">
        
	        
	        	<EditText android:id="@+id/et_pwd"
	        	    android:layout_width="fill_parent"
                	android:layout_height="50dp"
                	android:layout_margin="20dip"
                	android:background="@drawable/edittext_bg"
                	android:hint="密码"
                	android:padding="8dip"
                	android:textColorHint="#ff808080"
                	android:textSize="14sp"
	                android:inputType="phone"
	                android:password="true"
	        	    />
	        	
	        	<EditText android:id="@+id/et_cfmpwd"
	        	    android:layout_width="fill_parent"
                	android:layout_height="50dp"
                	android:layout_margin="20dip"
                	android:background="@drawable/edittext_bg"
                	android:hint="确认密码"
                	android:padding="8dip"
                	android:textColorHint="#ff808080"
                	android:textSize="14sp"
	                android:inputType="phone"
	                android:password="true"
	        	    />
	    
	    	 <Button 
            android:id="@+id/bt_register"
            android:layout_width="fill_parent"
	            android:layout_height="40dip"	           
	            android:layout_marginLeft="15dip"
	            android:layout_marginRight="15dip"
	            android:layout_marginBottom="20dip"	            
	            android:background="@drawable/v5_0_1_guide_button_blue_background"
	            android:text="完成"
	            android:textColor="@color/white"
	            android:clickable="true"/>

	        
	</LinearLayout>    
        
        
	</LinearLayout>    

</LinearLayout>