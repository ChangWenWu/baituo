<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical"
   android:background="#FFFFFF" >

    <!-- 头部导航 -->
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/v5_0_1_flipper_head_blue_background"
        android:orientation="horizontal" 
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:paddingLeft="8dip"
            android:text="订单查询"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        
    </LinearLayout>
   
	        <Button android:id="@+id/btn_inquiry"
	            android:layout_width="fill_parent"
	            android:layout_height="50dip"	           
	            android:layout_marginLeft="15dip"
	            android:layout_marginRight="15dip"
	            android:layout_margin="20dip"	            
	            android:background="@drawable/v5_0_1_guide_button_blue_background"
	            android:textColor="@color/white"
	            android:clickable="true"
	            android:text="本手机号外卖订单动态查询"
	            android:onClick="onmyquiry"
	           />


	        <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:background="#20333333" />
            <EditText 
                android:id="@+id/et_tel"
                	 android:layout_width="fill_parent"
                	android:layout_height="50dp"
                	android:layout_margin="20dip"
                	android:background="@drawable/edittext_bg"
                	android:padding="8dip"
                	android:textColorHint="#ff808080"
                	android:textSize="14sp"
	        	    android:inputType="phone"
	        	    android:hint="请输入要查询的手机号"
	        	    
	        	    />
            
        <Button android:id="@+id/btn_otherinquiry"
	            android:layout_width="fill_parent"
	            android:layout_height="50dip"	           
	            android:layout_marginLeft="15dip"
	            android:layout_marginRight="15dip"
	            android:layout_marginBottom="20dip"	            
	            android:background="@drawable/v5_0_1_guide_button_blue_background"
	            android:textColor="@color/white"
	            android:clickable="true"
	            android:text="他人手机号外卖订单动态查询"
	            android:onClick="oninquiry"
	           />

</LinearLayout>