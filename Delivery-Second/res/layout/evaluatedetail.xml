<?xml version="1.0" encoding="utf-8"?>
<!-- 登录界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical"
     android:background="#FFFFFF" >
    
<!-- 头部导航 -->
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/v5_0_1_flipper_head_blue_background"
        android:orientation="horizontal" >
          <ImageButton
            android:id="@+id/ib_return"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/v5_0_1_flipper_head_title_wrapper_background"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/v5_0_1_flipper_head_back" />

        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="评价"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        
    </LinearLayout>
    
    
    
    
    
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="0">
         <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="8dip"                 
                    android:background="#20333333" />
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="25sp"
             android:layout_margin="10dip"
             android:textColor="@android:color/black"
            android:text="订单编号：232131231241"/>
         
         <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="8dip"
                    
                    android:background="#20333333" />
        <RatingBar
                    android:id="@+id/ratebar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5" />
        
        
		<View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="8dip"                  
                    android:background="#20333333" />
        <EditText
            android:id="@+id/et_tel"
             android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:layout_margin="20dip"
                android:background="@drawable/edittext_bg"
                android:textColorHint="#ff808080"
                android:textSize="14sp"
            android:hint="对配送员或者对我们的意见：" >

            <requestFocus />
        </EditText>
    	
        
         <LinearLayout android:layout_width="fill_parent"
	            android:layout_height="40dip"
	            android:layout_marginTop="10dip"
	            android:gravity="center">
	        <Button android:id="@+id/bt_evaluate"
	           android:layout_width="fill_parent"
	            android:layout_height="50dip"	           
	            android:layout_marginLeft="15dip"
	            android:layout_marginRight="15dip"
	            android:layout_margin="20dip"	            
	            android:background="@drawable/v5_0_1_guide_button_blue_background"
	            android:textColor="@color/white"
	            android:clickable="true"
	            android:text="提交"
	            
	           />
	</LinearLayout>
    </LinearLayout>


</LinearLayout>