<?xml version="1.0" encoding="utf-8"?>
<!-- 登录界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical"
    android:background="#FFFFFF" >
    
<!-- 头部导航 -->
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:background="@drawable/v5_0_1_flipper_head_blue_background"
        android:orientation="horizontal" >
        
          <ImageButton
            android:id="@+id/ib_return"
            android:layout_width="54dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/v5_0_1_flipper_head_title_wrapper_background"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/v5_0_1_flipper_head_back" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="24dip"
            android:layout_gravity="center"
            android:src="@drawable/v5_0_1_flipper_head_separator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="8dip"
            android:text="外卖订单查询"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        
    </LinearLayout>
    
    
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:orientation="vertical"
        
        android:layout_weight="0">
         <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="8dip"
                    
                    android:background="#20333333" />
        <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:layout_marginLeft="4dip"
             android:textColor="@android:color/black"
            android:text="订单编号：232131231241"/>
        <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="8dip"
                    
                    android:background="#20333333" />
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:layout_marginLeft="4dip"
             android:textColor="@android:color/black"
            android:text="订单配送地址：1号公寓106"/>
         <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="8dip"
                    
                    android:background="#20333333" />
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:layout_marginLeft="4dip"
             android:textColor="@android:color/black"
            android:text="订单配送奖励：0.3元"/>
         <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="8dip"
                    
                    android:background="#20333333" />
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:layout_marginLeft="4dip"
             android:textColor="@android:color/black"
            android:text="订单状态：2min之后到达公寓"/>
         <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="8dip"
                    
                    android:background="#20333333" />
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:layout_marginLeft="4dip"
             android:textColor="@android:color/black"
            android:text="顾客评价：4星"/>
        
        <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_margin="8dip"
                    
                    android:background="#20333333" />
    
    </LinearLayout>


</LinearLayout>